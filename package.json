{
  "name": "grand9k",
  "version": "1.0.1",
  "description": "Grand9K Pixel font compatible with OLED displays in a Node.JS friendly format.",
  "main": "grand9k.js",
  "scripts": {
    "lint": "eslint ./*.js ./test/*.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sailingscally/grand9k.git"
  },
  "author": "Luis Martins <luis.martins@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-plugin-rewire": "^1.2.0",
    "eslint": "^8.27.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^28.1.3"
  },
  "babel": {
    "plugins": [ "babel-plugin-rewire" ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true,
      "es6": true
    },
    "extends": [ "eslint:recommended", "google" ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "comma-dangle": [ "error", "never" ],
      "keyword-spacing": [ "error", { "after": false } ],
      "max-len": [ "error", { "code": 110 } ],
      "no-console": "warn",
      "no-warning-comments": [ "warn", { "terms": [ "todo"] , "location": "anywhere" } ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [ "./*.js" ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
